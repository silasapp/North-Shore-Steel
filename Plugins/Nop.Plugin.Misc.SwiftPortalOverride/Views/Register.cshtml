                    <br />
                    <div class="container" style="padding:0 10em; margin-left:7em;">
                        <div class="row">
                            @if (Model.NewsletterEnabled || Model.CustomerAttributes.Count > 0)
                            {
                                @if (Model.NewsletterEnabled)
                                {
                                    <div class="col-md-6">
                                        <input asp-for="Newsletter" />
                                        <label asp-for="Newsletter" asp-postfix="">Sign me up to your newsletter</label>
                                        <span asp-validation-for="Newsletter"></span>
                                    </div>
                                }
                                @if (Model.CustomerAttributes.Count > 0)
                                {
                                    @await Html.PartialAsync("_CustomerAttributes", Model.CustomerAttributes)
                                }
                            }


                            @if (Model.AcceptPrivacyPolicyEnabled || Model.GdprConsents.Count > 0)
                            {
                                @if (Model.AcceptPrivacyPolicyEnabled)
                                {
                                    <script asp-location="Footer">
                                $(document).ready(function() {
                                    $('#register-button').on('click', function() {
                                        if ($('#accept-consent').is(':checked')) {
                                            //do some stuff
                                            return true;
                                        } else {
                                            //just show validation errors, don't post
                                            alert('@Html.Raw(JavaScriptEncoder.Default.Encode(T("Account.Fields.AcceptPrivacyPolicy.Required").Text))');
                                            return false;
                                        }
                                    });
                                });
                                    </script>
                                    <div class="accept-consent">
                                        <input id="accept-consent" type="checkbox" name="accept-consent" />
                                        <label for="accept-consent"></label>
                                        @if (Model.AcceptPrivacyPolicyPopup)
                                        {
                                            <span class="read" id="read-privacyinfo">Accept Terms and Privacy Policy</span>
                                            <script asp-location="Footer">
                                                $(document).ready(function() {
                                                    $('#read-privacyinfo').on('click',
                                                        function(e) {
                                                            displayPopupContentFromUrl(
                                                                '@Url.RouteUrl("TermsOfService", new {SystemName = "confirmation"})',
                                                                'Terms of Service', 10, 1000, true);
                                                        });
                                                });
                                            </script>
                                        }
                                        else
                                        {
                                            @*<a class="read" id="read-privacyinfo" href="@Url.RouteUrl("Topic", new {SeName = Html.GetTopicSeName("privacyinfo") })">@T("Account.Fields.AcceptPrivacyPolicy.Read")</a>*@
                                        }
                                    </div>
                                }
                            }

                        </div>
                    </div>
                </div>
            </div>

            <div class="buttons">
                <input type="submit" id="register-button" class="button-1 register-next-step-button" value="Sign Up" name="register-button" />
            </div>
        </form>
    </div>
</div>