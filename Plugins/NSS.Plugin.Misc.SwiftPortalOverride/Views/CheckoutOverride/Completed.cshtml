@using Nop.Web.Models.Checkout;

@model CheckoutCompletedModel
@{
    Layout = "_ColumnsOne";

    //title
    Html.AddTitleParts(T("PageTitle.Checkout").Text);
    //page class
    Html.AppendPageCssClassParts("html-checkout-page");
    Html.AppendPageCssClassParts("html-order-completed-page");

    Model.CustomProperties.TryGetValue("ErpOrderNo", out var erpOrderNo);
}

<style>
    .success-text {
        text-align: center;
    }

    .text-primary {
        color: #03175B !important;
    }

    .page-title {
        border-bottom: 2px solid #03175B;
    }
</style>

<div class="page checkout-page order-completed-page px-5">
    <div class="page-title">
        <label class="h4 text-primary">THANK YOU!</label>
    </div>
    <div class="page-body checkout-data px-5 mx-5 pb-5">
        <div class="section order-completed fieldset">
            <div class="title">
                <label class="h6 font-weight-bold text-primary">YOUR ORDER HAS BEEN SUCCESSFULLY PROCESSED</label>
            </div>
            <div class="text-center text-primary font-weight-bold">
                We appreciate your business. You will receive an order confirmation email shortly. Please confirm all details.
                Our goal is to provide you with the most convenient easy-to-use shopping experience in the industry.
                We always welcome your feedback.
            </div>
        </div>
    </div>
    <div class="details mt-2" style="text-align: center">
        <div class="order-number">
            <label class="text-primary h6 font-weight-bold text-center">ORDER NUMBER: @(erpOrderNo?.ToString() ?? "Np_"+@Model.OrderId.ToString())</label>
        </div>
        <div class="details-link">
            <a href="@Url.RouteUrl("OrderDetails")" class="text-primary"><u>CLICK HERE TO VIEW ORDER DETAILS</u></a>
            @*<a href="@Url.RouteUrl("OrderDetails", new { orderID = Model.OrderId })">CLICK HERE TO VIEW ORDER DETAILS </a>*@
        </div>
    </div>
</div>