
@{
    Layout = "_ColumnsOne";

    //title
    Html.AddTitleParts("Confirmation");
    //page class
    Html.AppendPageCssClassParts("html-registration-page");

}

<style>
    .header-menu {
        display: none !important;
    }

    .header-upper {
        background-color: transparent !important;
        border-bottom: none !important;
    }

    .nav-bar-search {
        display: none !important;
    }

    .header-links-wrapper {
        display: none !important;
    }

