@using Nop.Core
@using Nop.Web.Models.Customer
@using NSS.Plugin.Misc.SwiftCore.Helpers
@using NSS.Plugin.Misc.SwiftPortalOverride
@using NSS.Plugin.Misc.SwiftCore.Services
@using Nop.Services.Common
@inject IWorkContext workContext
@inject ICustomerCompanyService customerCompanyService
@inject IGenericAttributeService genericAttributeService
@model ChangePasswordModel
@{
    Layout = "_ColumnsTwo";

    //title
    Html.AddTitleParts(T("PageTitle.Account").Text);
    //page class
    Html.AppendPageCssClassParts("html-account-page");
    Html.AppendPageCssClassParts("html-change-password-page");
}

@{
    var compIdCookieKey = string.Format(SwiftPortalOverrideDefaults.ERPCompanyCookieKey, workContext.CurrentCustomer.Id);
    int eRPCompanyId = Convert.ToInt32(genericAttributeService.GetAttribute<string>(workContext.CurrentCustomer, compIdCookieKey));
    bool isBuyer = customerCompanyService.Authorize(workContext.CurrentCustomer.Id, eRPCompanyId, ERPRole.Buyer);
}

@section left
{
    @await Component.InvokeAsync("CustomCustomerNavigation", new { selectedTabId = CustomerNavigationEnum.ChangePassword, isABuyer = isBuyer })
}

<div class="page account-page customer-info-page">
    <div class="page-body">
        @if (!string.IsNullOrEmpty(Model.Result))
        {
            <div class="result" style="font-size:16px">
                @Model.Result
            </div>
        }
        <form asp-route="CustomerChangePassword" method="post" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="message-error" style="font-size:16px"></div>
            <div class="account-page-card">
                <div class="title"><strong>CHANGE PASSWORD</strong></div>
                <div class="form-fields">
                    <div class="">
                        <label asp-for="OldPassword"></label>
                        <nop-required />
                        <input asp-for="OldPassword" placeholder="Enter old password" class="form-control custom-input" />
                        <span asp-validation-for="OldPassword"></span>
                    </div>
                    <div class="">
                        <label asp-for="NewPassword"></label>
                        <nop-required />
                        <input asp-for="NewPassword" placeholder="Enter new password" class="form-control custom-input" />
                        <span asp-validation-for="NewPassword"></span>
                    </div>
                    <div class="">
                        <label asp-for="ConfirmNewPassword"></label>
                        <nop-required />
                        <input asp-for="ConfirmNewPassword" placeholder="Confirm new password" class="form-control custom-input" />
                        <span asp-validation-for="ConfirmNewPassword"></span>
                    </div>
                </div>
                <div class="buttons save-customer-info-button">
                    <input type=submit
                           id=save-info-button value='Reset Password' name=save-info-button
                           class="button-2 change-password-button">
                </div>
            </div>
            <div style="height: 200px;"></div>

            @*<div class="buttons">
                    <input type="submit" class="button-1 change-password-button" value="@T("Account.ChangePassword.Button")" />
                </div>*@
        </form>
    </div>
</div>