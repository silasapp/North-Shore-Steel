@using Nop.Web.Models.Customer
@model ChangePasswordModel
@{
    Layout = "_ColumnsTwo";

    //title
    Html.AddTitleParts(T("PageTitle.Account").Text);
    //page class
    Html.AppendPageCssClassParts("html-account-page");
    Html.AppendPageCssClassParts("html-change-password-page");
}
@section left
{
    @await Component.InvokeAsync("CustomCustomerNavigation", new { selectedTabId = CustomerNavigationEnum.ChangePassword })
}

<div class="page account-page customer-info-page">
    <div class="page-body">
        @if (!string.IsNullOrEmpty(Model.Result))
            {
            <div class="result">
                @Model.Result
            </div>
        }
    <form asp-route="CustomerChangePassword" method="post" autocomplete="off">
        <div asp-validation-summary="ModelOnly" class="message-error"></div>
        <div class="account-page-card">
            <div class="title"><strong>CHANGE PASSWORD</strong></div>
            <div class="form-fields">
                <div class="inputs">
                    <label asp-for="OldPassword" asp-postfix=":"></label>
                    <input asp-for="OldPassword" />
                    <nop-required />
                    <span asp-validation-for="OldPassword"></span>
                </div>
                <div class="inputs">
                    <label asp-for="NewPassword" asp-postfix=":"></label>
                    <input asp-for="NewPassword" />
                    <nop-required />
                    <span asp-validation-for="NewPassword"></span>
                </div>
                <div>

                </div>

                <div class="inputs">
                    <label asp-for="ConfirmNewPassword" asp-postfix=":"></label>
                    <input asp-for="ConfirmNewPassword" />
                    <nop-required />
                    <span asp-validation-for="ConfirmNewPassword"></span>
                </div>
            </div>
            <div class="buttons save-customer-info-button">
                <input type=submit
                       id=save-info-button value='Reset Password' name=save-info-button
                       class="button-2 change-password-button">
            </div>
        </div>
        <div style="height: 200px;"></div>

        @*<div class="buttons">
            <input type="submit" class="button-1 change-password-button" value="@T("Account.ChangePassword.Button")" />
        </div>*@
    </form>
    </div>
</div>